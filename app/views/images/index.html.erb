<%= turbo_frame_tag :image_gallery do %>
  <div data-controller="swiper">
    <div class="swiper" data-swiper-target="container">
      <div class="swiper-wrapper" data-action="lightbox:open@document->swiper#navigate">
        <% @guitar.images.each do |image| %>
          <div class="swiper-slide flex justify-center" data-key="<%= image.key %>">
            <%= image_tag image, class: "object-contain rounded-xl px-6 h-full mx-auto max-h-screen" %>      
          </div>
        <% end %>
      </div>
      <div class="swiper-button-prev" data-swiper-target="prev"></div>
      <div class="swiper-button-next" data-swiper-target="next"></div>
    </div>
  </div>
<% end %>