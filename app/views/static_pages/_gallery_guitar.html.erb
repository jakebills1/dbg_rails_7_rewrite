<div id="<%= dom_id guitar %>" class="prose">
  <h2><%= guitar.name %></h2>
  <p><%= number_to_currency guitar.price %></p>
  <p><%= guitar.description %></p>
  <p><%= guitar.year %></p>
  <div class="flex flex-row">
    <% guitar.images.each do |image| %>
      <%= image_tag url_for(image.variant(:thumb)), 
                    class: "hover:opacity-75", 
                    data: { 
                      action: "click->lightbox#handleOpen" ,
                      lightbox_url_param: "guitars/#{guitar.id}/images",
                      lightbox_key_param: image.key
                    } 
      %>
    <% end  %>
  </div>
</div>
