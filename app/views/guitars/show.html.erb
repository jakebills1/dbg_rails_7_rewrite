<div class="flex-col">
  <p style="color: green"><%= notice %></p>

  <%= render @guitar %>

  <div class="prose">
    <%= link_to "Edit this guitar", edit_guitar_path(@guitar) %> |
    <%= link_to "Back to guitars", guitars_path %>

    <%= button_to "Destroy this guitar", 
                  @guitar, 
                  method: :delete, 
                  class: 'bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded' 
    %>
  </div>
</div>

  